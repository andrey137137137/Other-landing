  section.section.footer_top
    .container

      article.float_col.col_3.footer_top__article
        a.logo(href="#")
          .img_wrap.logo__img
            img.img_wrap__img(src="img/logo.png" alt="Логотип")
          h2.logo__title Waxom
        p.footer_top__desc.main Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat. Ut wisi enim ad minim veniam, quis nostrud exerci suscipit lobortis claritatem.
        a.more_link.footer_top__link.more(href="#") Read more
      
      article.float_col.col_3.footer_top__article
        h3.title.footer_top__title Recent Posts

        -
          var footer_posts_1 = [
            'Lorem ipsum dolor sit amet, consectetuer adipiscing elit',
            'Diam nonummy nibh euismod tincidunt ut laoreet dolore magna',
            'Claritas est etiam processus dynamicus, qui sequitur mutationem per seacula quarta decima'
          ]

        for post, index in footer_posts_1
          if index < 2
            .footer_top__post
              span.footer_top__date September 08, 2015
              p.footer_top__desc #{post}
          else
            .footer_top__post.last
              span.footer_top__date September 08, 2015
              p.footer_top__desc #{post}
        
      article.float_col.col_3.footer_top__article
        h3.title.footer_top__title Our Twitter

        -
          var footer_posts_2 = [
            {
              desc: '<a class="footer_top__link" href="#">@waxom</a> Cum soluta nobis eleifend option congue nihil imperdiet doming',
              date: '3 mins'
            },
            {
              desc: 'Mirum est <a class="footer_top__link" href="#">#envato</a> notare quam littera gothica, quam nunc putamus parum anteposuerit litterarum',
              date: '5 hours'
            },
            {
              desc: 'Soluta nobis option <b class="footer__bold footer_top__bold"> bit.ly/1Hniso7</b>',
              date: '20 days'
            }
          ]

        for post, index in footer_posts_2
          if index < 2
            .footer_top__post
              p.footer_top__desc !{post.desc}
              span.footer_top__date #{post.date} ago
          else
            .footer_top__post.last
              p.footer_top__desc !{post.desc}
              span.footer_top__date #{post.date} ago

      .float_col.col_3.footer_top__article
        h3.title.footer_top__title Dribbble Widget

        - for (var i = 1; i <= 4; i++)
          .img_wrap.footer_top__img_wrap
            img.img_wrap__img(src=i alt=i)

